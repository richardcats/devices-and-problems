<Window x:Class="DevicesEnStoringen.Inloggen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevicesEnStoringen"
        mc:Ignorable="d"
        Title="Inloggen" Height="310" Width="300" FontSize="14" ResizeMode="NoResize">
    <Border Background="Aqua" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Gebruikersnaam:"/>
            <TextBox Name="txtGebruikersnaam" FontSize="18" Text="jan@bedrijf.nl"/>
            <Label Content="Wachtwoord:"/>
            <PasswordBox Name="txtWachtwoord" FontSize="18" Password="123"/>
            <Button Name="btnInloggen" Content="Inloggen" Margin="60 10" FontSize="18" Click="btnInloggen_Click"/>
        </StackPanel>
    </Border>
</Window>
